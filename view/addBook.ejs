<html>
  <head>
    <title>Add Books</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-image: url('../static/addimg.png');
        background-size: cover;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
        text-align: center;
      }

      form {
        background-color: white;
        max-width: 400px;
        margin: 20px auto;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 5px 5px 10px black;
        background-image: url(../static/book_add_img.jpg);
        background-size: cover;
        opacity: 1;
      }

      h1 {
        color: #333;
      }

      input[type='text'] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 2px solid #000;
        border-radius: 3px;
        outline: none;
      }

      button {
        width: 100%;
        padding: 10px;
        background-color: lightseagreen;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.9s;
      }

      button:hover {
        opacity: 0.8;
      }

      input::placeholder {
        color: darkslategrey;
      }
      body {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
      .all-books {
        display: flex;
        align-items: center;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <%- include('layout_admin') %>
    <div class="all-books">
      <form action="/add-book" method="POST">
        <h2>Add Books</h2>
        <input type="text" name="image" placeholder="Enter Image Link" />
        <input type="text" name="title" placeholder="Enter Book title" />
        <input type="text" name="author" placeholder="Enter Author name" />
        <input type="text" name="Type" placeholder="Enter Type" />
        <input type="text" name="price" placeholder="Enter Book Price" />
        <input type="text" name="quantity" placeholder="Enter quantity" />
        <button>Submit</button>
      </form>
    </div>
  </body>
</html>
