<html>
  <head>
    <title>Login Form</title>
  </head>
  <style>
    body {
      background-image: url('../static/login_img.png');
      background-size: cover;
      background-repeat: no-repeat;
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      height: 100vh;
      margin: 0;
    }

    form {
      background: rgba(175, 159, 143, 0.5);
      padding: 20px;
      border-radius: 5px;
      box-shadow: 5px 5px 5px black;
      max-width: 300px;
      text-align: center;
    }

    h1 {
      color: #e6e1e1c0.7;
    }

    input[type='email'],
    input[type='password'] {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 3px;
      outline: none;
    }

    button {
      background-color: #333;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #555;
    }

    div {
      padding-top: 10px;
      font-size: 14px;
      color: #666;
    }

    a {
      color: rgb(185, 153, 185);
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }
    .line1 {
      margin-bottom: 10px;
      margin-top: 5px;
    }
  </style>
  <body>
    <h1 style="color: rgb(153, 160, 165); position: absolute; top: 50px">
      Welcome To BookStore
    </h1>
    <form action="/verify-login" method="POST">
      <h1>Login Form</h1>
      <input type="email" name="email" placeholder="Enter your Email" />
      <input
        type="password"
        name="password"
        placeholder="Enter your Password"
      />
      <button>Login</button>
      <div class="line1" style="font-size: 17px; color: black">
        New Account
        <a
          href="/register"
          style="color: black; margin-left: 3px; text-decoration: none"
          >Register Here</a
        >
      </div>

      <a
        href="/admin-login"
        style="color: rgb(0, 0, 0, 1); font-size: 17px; text-decoration: none"
        >Admin Login</a
      >
    </form>
  </body>
</html>
